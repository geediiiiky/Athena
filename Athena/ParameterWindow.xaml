<Window x:Class="Athena.ParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Athena"
        mc:Ignorable="d"
        Title="Extra Parameters" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <ScrollViewer Height="200">
                <StackPanel x:Name="ParametersContainer" Margin="0,0,10,0">
                </StackPanel>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="AddParam" Content="Add" Width="30" Click="AddParam_Click"/>
                <Button x:Name="Ok" Content="OK" Width="60" HorizontalAlignment="Right" Margin="50,0,0,0" Click="Ok_Click"/>
                <Button x:Name="Cancel" Content="Cancel" Width="60" HorizontalAlignment="Right" Margin="10,0,0,0" Click="Cancel_Click"/>
                <Button x:Name="Apply" Content="Apply" Width="60" HorizontalAlignment="Right" Margin="10,0,0,0" Click="Apply_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
